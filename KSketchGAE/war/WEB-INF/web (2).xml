<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 
  <display-name>Simple</display-name>
  	<resource-ref>
 		<res-ref-name>jdbc/ksketchtestdb</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
 		<res-auth>Container</res-auth>
	</resource-ref>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>  
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>   
    <servlet>
        <servlet-name>EditProfileServlet</servlet-name>
        <servlet-class>com.servlets.EditProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProfileServlet</servlet-name>
        <url-pattern>/EditProfileServlet</url-pattern>
    </servlet-mapping>  
    <servlet>
        <servlet-name>ActivateProfileServlet</servlet-name>
        <servlet-class>com.servlets.ActivateProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActivateProfileServlet</servlet-name>
        <url-pattern>/ActivateProfileServlet</url-pattern>
    </servlet-mapping>     
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>com.servlets.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/ForgotPasswordServlet</url-pattern>
    </servlet-mapping>       
    <servlet>
        <servlet-name>SQLTest</servlet-name>
        <servlet-class>com.test.SQLTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SQLTest</servlet-name>
        <url-pattern>/SQLTest</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SQLDrop</servlet-name>
        <servlet-class>com.test.SQLDrop</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SQLDrop</servlet-name>
        <url-pattern>/SQLDrop</url-pattern>
    </servlet-mapping>              
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
